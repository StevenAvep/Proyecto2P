<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etPlacaVehiculo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Placa del VehÃ­culo"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etNombreVisitante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del Visitante"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etResidenciaDestino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Residencia de Destino"
        android:layout_marginBottom="16dp"/>

    <RadioButton
        android:id="@+id/rbIngreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingreso"
        android:layout_marginBottom="8dp"/>

    <RadioButton
        android:id="@+id/rbSalida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salida"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnGuardarMovimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Movimiento"/>
</LinearLayout>